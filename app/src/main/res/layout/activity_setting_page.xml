<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@color/trans_white">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Account Settings"
        android:textColor="@color/trans_blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/account_setting_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_username_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="17dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/account_setting_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Password"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/account_setting_email"
        app:layout_constraintStart_toStartOf="@+id/account_setting_email"
        app:layout_constraintTop_toBottomOf="@+id/account_setting_email" />

    <Button
        android:id="@+id/account_details_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/trans_white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/account_setting_password"
        app:layout_constraintStart_toStartOf="@+id/account_setting_password"
        app:layout_constraintTop_toBottomOf="@+id/account_setting_password" />

    <TextView
        android:id="@+id/account_setting_resetpasswordlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send reset password link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/account_details_save"
        android:textColor="@color/trans_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>