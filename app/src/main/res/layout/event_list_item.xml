<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_item"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/trans_white"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/big_date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="24"
            android:textColor="@color/trans_blue"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/month_year_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="September 2020"
            android:textColor="@color/trans_blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/big_date_event"
            app:layout_constraintStart_toStartOf="@+id/big_date_event"
            app:layout_constraintTop_toBottomOf="@+id/big_date_event" />

        <TextView
            android:id="@+id/details_of_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Meeting with Dangote by 2pm"
            android:textColor="@color/trans_blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/month_year_event"
            app:layout_constraintStart_toStartOf="@+id/month_year_event"
            app:layout_constraintTop_toBottomOf="@+id/month_year_event" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>